import java.util.concurrent.TimeUnit;


public class Bilis {

	private int växel;
	private int hast;
	private int ljus;
	private boolean tuta;
	
	public void växla(int v){
		if(v<=5 && v>=-1){
			växel=v;
		}else{
			System.out.print("FEL!");
		}
	}

	public void ändraHast(int h){
		if(h<220 && h>=0){
			hast=h;
		}
	}
	
	public void setLjus(int l){
		if(l<=2 && l>=0){
			ljus=l;
		}
	}

	public void stanna(){
		hast=0;
	}
	
	public void tuta(){
		tuta=true;
		try {
			TimeUnit.SECONDS.sleep(5);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		
	}

}
