
public class Kort {
	
	private int valör;
	private int färg;
	
	public Kort(int v, int f){
		if(v<=13 && v>=1 && f<=4 && f>=1){
			valör=v;
			färg=f;
		}
	}
	
	
	public String toString(){
		
		String blubb = null;
		
		if (färg==1){
			blubb="Hjärter ";
		}
		if (färg==2){
			blubb="Ruter ";
		}
		if (färg==3){
			blubb="Klöver ";
		}
		if (färg==4){
			blubb="Spader ";
		}
		if (valör==1){
			blubb=blubb + "Ess";
		}
		if (valör==11){
			blubb=blubb + "Knäkt";
		}
		if (valör==12){
			blubb=blubb + "Dam";
		}
		if (valör==13){
			blubb=blubb + "Kung";
		}
		if (valör>=2 && valör<=10){
			blubb=blubb + valör;
		}
		
		return blubb;
	}
}
